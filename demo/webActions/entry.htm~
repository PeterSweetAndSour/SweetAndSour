	<META HTTP-EQUIV="Content-Type" CONTENT="text/html; charset=iso-1859-1">
	<script language="Javascript" type="text/javascript">
		function validateForm() {
			entry = document.forms[0].siteNumber.value;
			document.forms[0].siteNumber.value = entry.replace(/[^0-9]/g, ""); //Remove spaces
			if((entry == "") || isNaN(entry)){
				document.getElementById("noID").innerHTML = "You must enter a numeric siteID";
				document.getElementById("siteNumber").focus();
				return false;
			}
			return true; 
		}
	</script>
</body>
<body>
	<form action="display.htm" method="post" onsubmit="return validateForm()">
		<h1 id="title">Web Actions &ndash; Entry</h1>
