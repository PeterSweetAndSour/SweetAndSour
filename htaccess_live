RewriteEngine on

IndexIgnore .htaccess */.??* *~ *# */HEADER* */README* */_vti*

<Limit GET POST>
order deny,allow
deny from all
allow from all
</Limit>

<Limit PUT DELETE>
order deny,allow
deny from all
</Limit>

AuthName www.sweetandsour.org
RewriteCond %{HTTP_HOST} ^sweetandsour.org$ [OR]
RewriteCond %{HTTP_HOST} ^www.sweetandsour.org$
RewriteRule ^index.html$ "http\:\/\/www\.sweetandsour\.org\/home\/" [R=301,L]

# AddHandler mod_deflate .css
# AddHandler mod_deflate .js

<IfModule mod_deflate.c>
	<FilesMatch ".(js|css)$">
		SetOutputFilter DEFLATE
	</FilesMatch>
</IfModule>

<FilesMatch ".(css|gif|jpg|js|pdf|png)$">
Header set Expires "Wed, 21 May 2010 20:00:00 GMT"
</FilesMatch>

Header unset ETag
FileETag None

Options All -Indexes

